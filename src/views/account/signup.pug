extend ../shared/layout

block layout-content 
    section.vh-80
        .container.h-80
            .row.d-flex.justify-content-center.align-items-center.h-100
                .col-lg-12.col-xl-11
                    .card.text-black(style='border-radius: 25px;')
                        .card-body
                            .row.justify-content-center
                                .col-md-10.col-lg-6.col-xl-5.order-2.order-lg-1
                                    p.text-center.h1.fw-bold.mb-5.mx-1.mx-md-4.mt-4 Sign up
                                    form.mx-1.mx-md-4
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.fa-user.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0
                                                input#form3Example1c.form-control(type='text' name='name')
                                                label.form-label(for='form3Example1c') Your Name
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.fa-envelope.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0
                                                input#form3Example3c.form-control(type='email' name='email')
                                                label.form-label(for='form3Example3c') Your Email
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fas.fa-lock.fa-lg.me-3.fa-fw
                                            .form-outline.flex-fill.mb-0
                                                input#form3Example4c.form-control(type='password' name='password')
                                                label.form-label(for='form3Example4c') Password
                                        .d-flex.flex-row.align-items-center.mb-4
                                            i.fa-solid.fa-key
                                            .form-outline.flex-fill.mb-0
                                                input#form3Example4cd.form-control(type='password' name='confirmpassword')
                                                label.form-label(for='form3Example4cd') Repeat your password
                                        .d-flex.justify-content-center.mx-4.mb-3.mb-lg-4
                                            button.btn.btn-primary.btn-lg(type='button') Register
                                .col-md-10.col-lg-6.col-xl-7.d-flex.align-items-center.order-1.order-lg-2
                                    img.img-fluid(src='/images/draw1.webp' alt='Sample image')